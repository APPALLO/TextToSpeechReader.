<Window x:Class="TextToSpeechApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TextToSpeechApp"
        xmlns:vm="clr-namespace:TextToSpeechApp.ViewModels"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Metinden Sese Dönüştürücü" Height="850" Width="1100">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Başlık ve Ayarlar -->
            <RowDefinition Height="*"/>    <!-- Ana İçerik -->
            <RowDefinition Height="Auto"/> <!-- Kontroller -->
            <RowDefinition Height="Auto"/> <!-- Log Paneli -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Ayarlar Kartı -->
        <materialDesign:Card Margin="10" Padding="10" Grid.Row="0" UniformCornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Ses Ayarları -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Voice & Highlight -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="AccountVoice" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Ses:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding Voices}" SelectedItem="{Binding SelectedVoice}" 
                                  materialDesign:HintAssist.Hint="Ses Seçin" Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                        <materialDesign:PackIcon Kind="FormatColorHighlight" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="3" Text="Vurgu:" VerticalAlignment="Center" FontWeight="Bold" Margin="25,0,10,0"/>
                        <ComboBox Grid.Column="4" ItemsSource="{Binding HighlightColors}" SelectedItem="{Binding SelectedHighlightColor}" 
                                  materialDesign:HintAssist.Hint="Renk" Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>

                    <!-- Row 2: Rate & Volume -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Speedometer" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Hız:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Slider Grid.Column="1" Minimum="-10" Maximum="10" Value="{Binding Rate}" TickFrequency="1" IsSnapToTickEnabled="True" 
                                Style="{StaticResource MaterialDesignDiscreteSlider}"/>

                        <materialDesign:PackIcon Kind="VolumeHigh" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="3" Text="Seviye:" VerticalAlignment="Center" FontWeight="Bold" Margin="25,0,10,0"/>
                        <Slider Grid.Column="4" Minimum="0" Maximum="100" Value="{Binding Volume}" TickFrequency="10" IsSnapToTickEnabled="True" 
                                Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                    </Grid>
                </Grid>

                <!-- Cloud Ayarları (Kaldırıldı) -->

            </Grid>
        </materialDesign:Card>

        <!-- Ana İçerik -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/> <!-- Dosya Listesi -->
                <ColumnDefinition Width="10"/>   <!-- Boşluk -->
                <ColumnDefinition Width="*"/>   <!-- Metin Önizleme -->
            </Grid.ColumnDefinitions>

            <!-- Dosya Listesi Kartı -->
            <materialDesign:Card Grid.Column="0" UniformCornerRadius="6" VerticalAlignment="Stretch">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding AddFilesCommand}" Margin="0,0,10,0" ToolTip="Dosya veya Resim Ekle">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePlus" Margin="0,0,5,0"/>
                                <TextBlock Text="Ekle"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding RemoveFileCommand}" ToolTip="Seçili Dosyayı Sil" BorderBrush="Red" Foreground="Red">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Margin="0,0,5,0"/>
                                <TextBlock Text="Sil"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFile}" Margin="0,0,0,10" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Status}" FontSize="11" Opacity="0.7" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Message}" FontSize="11" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </materialDesign:Card>

            <!-- Metin Alanı Kartı -->
            <materialDesign:Card Grid.Column="2" UniformCornerRadius="6" VerticalAlignment="Stretch">
                <DockPanel Margin="10">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                        <materialDesign:PackIcon Kind="TextSubject" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Metin Önizleme" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBox x:Name="MainTextBox" Text="{Binding SelectedFile.ExtractedText, UpdateSourceTrigger=PropertyChanged}" 
                             IsReadOnly="True" IsUndoEnabled="False"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             Padding="5" FontFamily="Segoe UI" FontSize="16" BorderThickness="0"
                             SelectionBrush="{Binding SelectedHighlightColor}" SelectionOpacity="0.5">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Yellow">
                                        <Setter Property="SelectionTextBrush" Value="Black"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Cyan">
                                        <Setter Property="SelectionTextBrush" Value="Black"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Orange">
                                        <Setter Property="SelectionTextBrush" Value="Black"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Green">
                                        <Setter Property="SelectionTextBrush" Value="Black"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Blue">
                                        <Setter Property="SelectionTextBrush" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Red">
                                        <Setter Property="SelectionTextBrush" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedHighlightColor}" Value="Magenta">
                                        <Setter Property="SelectionTextBrush" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DockPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Kontroller -->
        <materialDesign:Card Grid.Row="2" Margin="10,0,10,10" Padding="10" UniformCornerRadius="6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Navigasyon Geri -->
                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding MoveToPreviousParagraphCommand}" ToolTip="Önceki Paragraf" Margin="0,0,5,0">
                    <materialDesign:PackIcon Kind="SkipPrevious"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding MoveToPreviousSentenceCommand}" ToolTip="Önceki Cümle" Margin="0,0,20,0">
                    <materialDesign:PackIcon Kind="Rewind"/>
                </Button>

                <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Command="{Binding SpeakCurrentCommand}" Margin="0,0,10,0" ToolTip="Oku">
                    <materialDesign:PackIcon Kind="Play"/>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" Command="{Binding PauseCommand}" Margin="0,0,10,0" ToolTip="Duraklat">
                    <materialDesign:PackIcon Kind="Pause"/>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" Command="{Binding ResumeCommand}" Margin="0,0,20,0" ToolTip="Devam Et">
                    <materialDesign:PackIcon Kind="PlayPause"/>
                </Button>
                
                <!-- Navigasyon İleri -->
                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding MoveToNextSentenceCommand}" ToolTip="Sonraki Cümle" Margin="0,0,5,0">
                    <materialDesign:PackIcon Kind="FastForward"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignIconButton}" Command="{Binding MoveToNextParagraphCommand}" ToolTip="Sonraki Paragraf" Margin="0,0,20,0">
                    <materialDesign:PackIcon Kind="SkipNext"/>
                </Button>

                <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Background="#D32F2F" BorderBrush="#D32F2F" Command="{Binding StopCommand}" Margin="0,0,40,0" ToolTip="Durdur">
                    <materialDesign:PackIcon Kind="Stop"/>
                </Button>
                
                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="0,0,20,0" LayoutTransform="{Binding RelativeSource={RelativeSource Self}, Path=RenderTransform}">
                    <Separator.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </Separator.RenderTransform>
                </Separator>
                
                <CheckBox Content="MP3 Kaydet" IsChecked="{Binding SaveAsMp3}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <Button Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Command="{Binding SaveSelectedCommand}" ToolTip="Kaydet">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,5,0"/>
                        <TextBlock Text="Kaydet"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>
        
        <!-- Log Paneli -->
        <Expander Grid.Row="3" Header="İşlem Kayıtları (Logs)" Margin="10,0,10,10" IsExpanded="False">
            <ListBox ItemsSource="{Binding Logs}" Height="100" Background="{DynamicResource MaterialDesignPaper}" FontFamily="Consolas" FontSize="11"/>
        </Expander>

        <!-- Durum Çubuğu -->
        <StatusBar Grid.Row="4" Background="{DynamicResource MaterialDesignPaper}">
             <StatusBarItem>
                <ProgressBar Width="150" Height="10" IsIndeterminate="{Binding IsProcessing}" 
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Opacity="0.7"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
